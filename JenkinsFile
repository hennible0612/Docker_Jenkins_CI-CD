pipeline {
    agent any
    stages {


        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "https://github.com/hennible0612/Docker_Jenkins_CI-CD"
            }
        }
        stage('Prepare Environment') {
            steps {
                sh 'chmod +x ./gradlew'
            }
        }
        stage('Build Project') {
            steps {
                sh './gradlew clean build'
            }
        }
        stage('Docker Login') {
            steps {
                sh 'echo @Sungwooh3756 | docker login -u sungwoo166@gmail.com --password-stdin'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t logtest-app .'
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker push hennible0612/jenkins:tagname'
            }
        }
    }


}